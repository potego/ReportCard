<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.reportcard.MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ul_logo"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#F5B041"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g johndoe@gmail.co.za"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="25sp"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="#F5B041"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="25sp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g abcd.123*@2016"
        android:textColor="#F5B041"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="25sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_margin="2dp"
        android:textAllCaps="true"
        android:onClick="login"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"

        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="forgot Password?"
        android:layout_margin="2dp"
        android:textAllCaps="false"
        android:background="@null"
        android:onClick="Forgot_Password"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"/>

</LinearLayout>
